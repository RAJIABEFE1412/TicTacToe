<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.example.dell.tictactoe.MainActivity">

<RelativeLayout
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="cursive"
        android:text="@string/score_board"
        android:textColor="#fff"
        android:textSize="29dp" />
    <LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/scoreboard"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/player1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:fontFamily="sans-serif"
        android:text="Player 1"
        android:textColor="#fff"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/player2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif"
        />
    </LinearLayout>

</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:text="@string/player_s_turn"
        android:id="@+id/playerTurn"
        android:textColor="#000"
        android:layout_margin="16dp"
        android:textSize="29dp" />
    <LinearLayout
        android:rotation="-3.84"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:textSize="30sp"
                android:background="#fff"
                android:id="@+id/button_00"
                android:layout_margin="@dimen/View_margin"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/button_01"
                android:layout_margin="@dimen/View_margin"
                android:background="#fff"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/button_02"
                android:background="#fff"
                android:layout_margin="@dimen/View_margin"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:textSize="30sp"
                android:id="@+id/button_10"
                android:background="#fff"
                android:layout_margin="@dimen/View_margin"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/button_11"
                android:layout_margin="@dimen/View_margin"
                android:background="#fff"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:background="#fff"
                android:textSize="30sp"
                android:id="@+id/button_12"
                android:layout_margin="@dimen/View_margin"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:textSize="30sp"
                android:id="@+id/button_20"
                android:background="#fff"
                android:layout_margin="@dimen/View_margin"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:id="@+id/button_21"
                android:textSize="30sp"
                android:layout_margin="@dimen/View_margin"
                android:background="#fff"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:textSize="30sp"
                android:id="@+id/button_22"
                android:background="#fff"
                android:layout_margin="@dimen/View_margin"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>

    </LinearLayout>

<android.support.design.widget.FloatingActionButton
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/ic_settings_backup_restore_white_36dp"
    android:id="@+id/button_reset"
    android:layout_alignParentBottom="true"
    android:layout_margin="8dp"
    android:background="@color/colorPrimary"
    />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:id="@+id/settings"
        android:src="@drawable/ic_settings_white_36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        />
</RelativeLayout>
